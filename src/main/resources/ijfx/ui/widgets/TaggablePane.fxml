<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <GridPane styleClass="taggable-pane">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <TextField fx:id="tagTextField" promptText="Type a tag and press enter" GridPane.columnSpan="2" GridPane.rowIndex="1" />
            <Label fx:id="possibleTagsLabel" text="Possible tags :" GridPane.rowIndex="2" />
            <FlowPane fx:id="tagFlowPane" GridPane.columnIndex="1" />
            <FlowPane fx:id="possibleTagsFlowPane" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Tags :" />
         </children>
      </GridPane>
   </children>
</VBox>
