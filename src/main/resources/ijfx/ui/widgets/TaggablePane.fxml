<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <FlowPane fx:id="tagFlowPane" />
      <TextField fx:id="tagTextField" promptText="Type a tag and press enter" />
      <HBox fx:id="possibleTagHBox">
         <children>
            <Label text="Possible tags :" />
            <FlowPane fx:id="possibleTagsFlowPane" />
         </children>
      </HBox>
   </children>
</VBox>
